{
  "name": "my-local-market",
  "version": "1.0.0",
  "description": "Hyper-local commerce service for Jinro Mart Mokgam",
  "scripts": {
    "dev": "concurrently \"npm run db:up\" \"npm run dev:front\"",
    "dev:front": "npm run dev --prefix services/frontend -- -p 3001",
    "dev:python": "docker compose up -d db backend",
    "db:up": "docker compose up -d db backend",
    "db:down": "docker compose down",
    "stack:up": "docker compose up -d --build db backend frontend",
    "transition:up": "npm run stack:up",
    "mvp:up": "npm run stack:up",
    "mvp:down": "docker compose down"
  },
  "dependencies": {},
  "devDependencies": {
    "concurrently": "^9.0.0"
  }
}
